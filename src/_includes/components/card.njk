{# src/_includes/components/card.njk #}
{% macro Card(title, content, cta_href="", cta_label="") %}
  <article class="card">
    <h2>{{ title }}</h2>
    <div class="card__content">
      {{ content | safe }}
    </div>
    {% if cta_href and cta_label %}
      <p><a class="btn" href="{{ cta_href }}">{{ cta_label }}</a></p>
    {% endif %}
  </article>
{% endmacro %}
