<h1>Publications</h1>

{% set pubsByYear = publications | groupby("year") | reverse %}
{% for group in pubsByYear %}
  <h2>{{ group.grouper }}</h2>
  <ul class="publist">
  {% for p in group.list %}
    <li>
      {{ p.authors }} ({{ p.year }}).
      <strong>{{ p.title }}</strong>. <em>{{ p.venue }}</em>
      {% if p.doi_url %} 路 <a href="{{ p.doi_url }}" target="_blank" rel="noreferrer">DOI</a>{% endif %}
      {% if p.preprint %} 路 <a href="{{ p.preprint }}" target="_blank" rel="noreferrer">Preprint</a>{% endif %}
      {% if p.pdf %} 路 <a href="{{ p.pdf }}">PDF</a>{% endif %}
      {% if p.code %} 路 <a href="{{ p.code }}" target="_blank" rel="noreferrer">Code</a>{% endif %}
    </li>
  {% endfor %}
  </ul>
{% endfor %}
