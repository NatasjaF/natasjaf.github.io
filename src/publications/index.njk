cat > src/publications/index.njk <<'NJK'
---
title: "Publications"
layout: "base.njk"
permalink: "/publications/index.html"
---

<h1>Publications</h1>

{% set groups = publications | groupby("year") | reverse %}
{% if groups and groups.length %}
  {% for group in groups %}
    <h2>{{ group.grouper }}</h2>
    <ul class="publist">
      {% for p in group.items %}
        <li>
          {{ p.authors }} ({{ p.year }}).
          <strong>{{ p.title }}</strong>. <em>{{ p.venue }}</em>
          {% if p.doi_url %} 路 <a href="{{ p.doi_url }}" target="_blank" rel="noreferrer">DOI</a>{% endif %}
          {% if p.preprint %} 路 <a href="{{ p.preprint }}" target="_blank" rel="noreferrer">Preprint</a>{% endif %}
          {% if p.pdf %} 路 <a href="{{ p.pdf }}">PDF</a>{% endif %}
          {% if p.code %} 路 <a href="{{ p.code }}" target="_blank" rel="noreferrer">Code</a>{% endif %}
        </li>
      {% endfor %}
    </ul>
  {% endfor %}
{% else %}
  <p>No publications found. Add items to <code>src/_data/publications.json</code>.</p>
{% endif %}
NJK
